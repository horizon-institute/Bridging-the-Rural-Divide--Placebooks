<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='org.placebooks.client.ui.widgets.ToolbarItem.Style'>
		.enabled {
			padding: 0 10px;
			cursor: pointer;
		}
		
		.disabled {
			padding: 0 10px;
			cursor: default;
			opacity: 0.3;
		}
		
		.enabled:HOVER {
			color: #fff;
			background-color: rgba(128, 128, 128, 0.3);
		}
		
		.label {
			display: inline;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.enabled}">
		<g:Image ui:field="image" />
		<g:HTML ui:field="label" styleName="{style.label}" />
	</g:FlowPanel>
</ui:UiBinder> 