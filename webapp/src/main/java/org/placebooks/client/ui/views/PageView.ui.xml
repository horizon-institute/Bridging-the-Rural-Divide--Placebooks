<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.outerPanel {
			position: relative;
			border: 1px solid black;
			margin-bottom: 20px;
			overflow: hidden;
			background: #FFF;
		}
		
		.innerPanel {
			position: absolute;
			left: 0px;
			top: 0px;
			width: 100%;
			height: 100%;
		}
		
		.columnPanel {
			position: absolute;
			left: 30px;
			top: 30px;	
			right: 30px;
			bottom: 30px;
		}
		
		.pageNumber {
			position: absolute;
			left: 0px;
			right: 0px;
			bottom: 0px;	
			height: 25px;
			text-align: right;
			margin: 0 15px;
			color: #777;
		}
	</ui:style>
	<g:FlowPanel ui:field="outerPanel" styleName="{style.outerPanel}">
		<g:FlowPanel ui:field="innerPanel" styleName="{style.innerPanel}">
			<g:FlowPanel ui:field="columnPanel" styleName="{style.columnPanel}"/>
			<g:Label ui:field="pageNumber" styleName="{style.pageNumber}"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 
