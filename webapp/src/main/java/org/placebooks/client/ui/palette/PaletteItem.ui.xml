<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:w="urn:import:org.placebooks.client.ui.widgets" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style type="org.placebooks.client.ui.palette.PaletteItem.PaletteStyle">
		.panel {
			padding: 5px;
			margin: 10px auto;
			text-align: center;
			border-radius: 10px;
			display: inline-block;
		}
		
		.panel:HOVER {
			background-color: #667;
		}
		
		.text {
			margin-left: auto;
			margin-right: auto;
			padding: 0px 7px;
			font-family: Verdana, Arial, sans-serif;
			font-size: 12px;
			background: #333;
			color: #FFF;
			border-radius: 10px;
			max-width: 96px;
			overflow: hidden;
			text-overflow: ellipsis;			
		}
		
		.backItem {
			border-image: url(back.png) 2 4 3 11;
			-webkit-border-image: url(back.png) 2 4 3 11;
			border-width: 2px 4px 3px 11px;
			font-family: Verdana, Arial, sans-serif;
			font-size: 12px;
			line-height: 19px;
			padding: 0 7px;
		}
	</ui:style>

	<g:FlowPanel>
		<w:MousePanel styleName="{style.panel}" ui:field="panel">
			<g:Image ui:field="image" />
				<g:Label styleName="{style.text}" ui:field="text" />
		</w:MousePanel>
	</g:FlowPanel>
</ui:UiBinder> 